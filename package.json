{
  "name": "ai-note-converter",
  "version": "1.0.0",
  "description": "Convert HTML documentation to Markdown and generate static site",
  "main": "src/generate_index.js",
  "scripts": {
    "convert-html": "node src/convert_html_to_md.js",
    "convert-md": "node src/convert_md_to_html.js",
    "convert-md-pandoc": "node src/convert_md_to_html_pandoc.js",
    "convert-single-md": "node src/convert-single-md.js",
    "generate-index": "node src/generate_index_with_dates.js",
    "generate-sitemap": "node src/generate_sitemap.js",
    "generate-overview": "node src/generate_overview.js",
    "new-md": "node src/new_markdown.js",
    "new-html": "node src/new_html.js",
    "build": "npm run convert-md-pandoc && npm run generate-index && npm run generate-sitemap && npm run generate-overview",
    "dev": "concurrently \"npm run watch\" \"http-server -p 3003\"",
    "watch-chokidar": "node src/watch-md-chokidar.js",
    "watch-nodemon": "nodemon --watch markdown --ext md --exec \"npm run convert-single-md\"",
    "watch": "node watcher/watcher.js",
    "prepare": "husky"
  },
  "keywords": [
    "markdown",
    "html",
    "converter",
    "documentation"
  ],
  "author": "AI Note Developer",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "marked": "^4.3.0"
  },
  "devDependencies": {
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10"
  }
}
